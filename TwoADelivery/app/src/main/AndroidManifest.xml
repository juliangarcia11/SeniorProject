<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="juliangarcia.twoadelivery" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HelloWorld"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".HelloWorld"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="juliangarcia.twoadelivery.HelloWorld" />
        </activity>
        <activity
            android:name=".LevelsMenuActivity"
            android:label="@string/title_activity_levels_menu"
            android:parentActivityName=".HelloWorld"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="juliangarcia.twoadelivery.HelloWorld" />
        </activity>
        <activity
            android:name=".LevelsActivity"
            android:label="@string/title_activity_levels"
            android:parentActivityName=".LevelsMenuActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="juliangarcia.twoadelivery.LevelsMenuActivity" />
        </activity>
    </application>

</manifest>
