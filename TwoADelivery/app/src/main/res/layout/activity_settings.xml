<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bluespace2"
    tools:context="juliangarcia.twoadelivery.SettingsActivity">

    <Button
        android:padding="10dp"
        android:background="@drawable/button_shape"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_login"
        android:id="@+id/button_login"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/button_binary_tut"
        android:layout_alignEnd="@+id/button_binary_tut" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Binary"
        android:id="@+id/button_binary_tut"
        android:background="@drawable/button_shape"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tutorials:"
        android:id="@+id/textView2"
        android:textColor="#fffeb300"
        android:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button_binary_tut"
        android:layout_alignStart="@+id/button_binary_tut" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:padding="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Dev Options"
            android:id="@+id/text_dev_op"
            android:textColor="#000000"
            android:textStyle="bold|italic"
            android:layout_alignParentRight="false"
            android:layout_alignParentEnd="false"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lose 5 Drivers"
            android:id="@+id/button_dev_op1"
            android:background="@drawable/button_shape"
            android:padding="5dp"
            android:layout_below="@+id/text_dev_op"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Coins"
            android:id="@+id/button_dev_op2"
            android:background="@drawable/button_shape"
            android:padding="5dp"
            android:layout_below="@+id/button_dev_op3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Drivers"
            android:id="@+id/button_dev_op3"
            android:background="@drawable/button_shape"
            android:padding="5dp"
            android:layout_below="@+id/button_dev_op1"
            android:layout_alignLeft="@+id/button_dev_op1"
            android:layout_alignStart="@+id/button_dev_op1" />

    </RelativeLayout>

</RelativeLayout>
