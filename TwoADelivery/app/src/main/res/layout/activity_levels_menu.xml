<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="juliangarcia.twoadelivery.LevelsMenuActivity">

    <TextView
        android:text="@string/title_activity_levels"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LevelsTitle"
        android:layout_centerHorizontal="true"
        android:textSize="50sp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_level1"
        android:id="@+id/button_level1"
        android:layout_below="@+id/LevelsTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:clickable="false"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_level2"
        android:id="@+id/button_level2"
        android:layout_below="@+id/button_level1"
        android:layout_centerHorizontal="true"
        android:clickable="false"
        android:visibility="visible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_zen"
        android:id="@+id/button_levelzen"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
